{
  "root": true,
  "env": { "es2021": true },
  "plugins": ["googleappsscript"],
  "extends": ["eslint:recommended", "plugin:googleappsscript/recommended"],
  "parserOptions": { "ecmaVersion": 12, "sourceType": "script" },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-undef": "off"
  }
}
